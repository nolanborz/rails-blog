<%# app/views/articles/show.html.erb %>
<div class="max-w-3xl mx-auto px-4 py-8">
  <% if !@article.published? %>
    <div class="mb-6 px-4 py-2 bg-yellow-50 text-yellow-800 border-l-4 border-yellow-500 rounded">
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <span>This is a draft and is only visible to you</span>
      </div>
    </div>
  <% end %>

  <article>
    <header class="mb-10">
      <h1 class="text-4xl justify-center font-bold text-gray-900 leading-tight mb-3"><%= @article.title %></h1>
      
      <div class="flex items-center text-gray-500 text-sm mb-6">
        <span class="mr-4"><%= @article.created_at.strftime("%B %d, %Y") %></span>
        <span class="mr-4">·</span>
        <span><%= pluralize(@article.body.split.size, 'word') %></span>
        <% if @article.published? %>
          <span class="mx-4">·</span>
          <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">Published</span>
        <% end %>
      </div>
      
      <div class="border-b border-gray-200 pb-4"></div>
    </header>

    <div class="prose prose-lg max-w-none mx-auto text-gray-800">
      <%= markdown(@article.body) %>
    </div>
    
    <% if @article.images.attached? && @article.images.size > 0 %>
      <div class="my-12">
        <% if !@article.body.include?('![') %>
          <h3 class="text-xl font-semibold text-gray-900 mb-6">Gallery</h3>
        <% end %>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% @article.images.each do |image| %>
            <div class="overflow-hidden rounded-lg shadow-md">
              <%= image_tag image, alt: "Article image", class: "w-full h-auto object-cover" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </article>

  <div class="mt-12 pt-6 border-t border-gray-200">
    <div class="flex flex-wrap gap-4">
      <%= link_to articles_path, class: "inline-flex items-center px-4 py-2 text-gray-600 hover:text-gray-900 hover:underline" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Articles
      <% end %>
      
      <%= link_to edit_article_path(@article), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Article
      <% end %>

      <%= button_to article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete Article
      <% end %>
    </div>
  </div>
</div>
